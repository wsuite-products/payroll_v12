<odoo>

    <record id="res_users_servers_view_tree" model="ir.ui.view">
        <field name="name">res.users.servers.view.tree</field>
        <field name="model">res.users.servers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="server_id"/>
                <field name="user_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="res_users_servers_view_form" model="ir.ui.view">
        <field name="name">res.users.servers.view.form</field>
        <field name="model">res.users.servers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_company" widget='image' class="oe_avatar"/>
                    <group>
                        <group colspan="4" col="4">
                            <field name="server_id" required="1" options="{'no_create': True}"/>
                            <field name="user_id" required="1" options="{'no_create': True}"/>
                            <field name="company_id"/>
                            <field name="switch_database_url" invisible="1"/>
                            <field name="is_microsoft_login" invisible="1"/>
                            <field name="is_w_admin" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_users_servers_action" model="ir.actions.act_window">
        <field name="name">User's Server</field>
        <field name="res_model">res.users.servers</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="res_users_servers_menu_action"
        name="User's Server"
        action="res_users_servers_action"
        parent="base.menu_custom"
        sequence="0"
        groups="base.group_system"/>

</odoo>
