<?xml version="1.0"?>
<odoo>

    <record id="quotation_selection_process_wizard_form" model="ir.ui.view">
        <field name="name">quotation.selection.process.wizard.form</field>
        <field name="model">quotation.selection.process</field>
        <field name="arch" type="xml">
            <form string="Quotation Selection Process">
                <group string="Select Line for Quotation">
                    <field name="quotation_selection_pro_ids" nolabel="1">
                        <tree create="false">
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="product_tmpl_id"/>
                            <field name="order_date"/>
                            <field name="product_uom_qty"/>
                            <field name="hours"/>
                            <field name="product_uom" groups="uom.group_uom"/>
                            <field name="price_unit"/>
                            <field name="price"/>
                            <field name="tax_id" widget="many2many_tags"/>
                            <field name="discount" groups="sale.group_discount_per_so_line"/>
                            <field name="price_subtotal"/>
                            <field name="crm_lead_line_id" invisible="1"/>
                            <field name="quotation_number"/>
                        </tree>
                    </field>
                </group>
                <field name="crm_lead_id" invisible="1"/>
                <footer>
                    <button name="create_quotation" type="object" string="Create Quotation" class="oe_right oe_highlight"/>
                    <button string="Cancel" class="oe_right" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>