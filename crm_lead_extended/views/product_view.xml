<?xml version="1.0"?>
<odoo>

    <!-- Product Template Item Inherit Form View -->
    <record id="product_template_form_view_inherit_wsuite" model="ir.ui.view">
        <field name="name">product_template_form_view_inherit_wsuite</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="wsuite"/>
                <field name="client_id"/>
                <field name="is_default"/>
                <field name="custom_asset"/>
                <field name="w_message"/>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page string="Flow Details">
                    <group>
                        <field name="flow_json"/>
                        <field name="flow_config_json"/>
                    </group>
                </page>
<!--                <page string="W-Admin" name="w_admin">-->
<!--                    <group string="Profit" col="4">-->
<!--                        <field name="profit_type"/>-->
<!--                        <field name="profit_percentage"/>-->
<!--                    </group>-->
<!--                    <group string="Account References" name="account_references" col="4">-->
<!--                        <field name="direct_cost"/>-->
<!--                        <field name="indirect_cost"/>-->
<!--                        <field name="income"/>-->
<!--                    </group>-->
<!--                </page>-->
            </xpath>
        </field>
    </record>

    <!-- Product Item Inherit Form View -->
    <record id="product_normal_form_view_inherit_wsuite" model="ir.ui.view">
        <field name="name">product_normal_form_view_inherit_wsuite</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="type" position="before">
                <field name="product_name"/>
            </field>
            <xpath expr="//field[@name='name']" position="attributes">
                 <attribute name="string">Template Name</attribute>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="wsuite"/>
                <field name="custom_asset"/>
                <field name="w_message"/>
                <field name="pwi_id"/>
                <field name="task_id"/>
                <field name="estimated_live_date"/>
                <field name="quotation_deadline"/>
                <field name="module_type"/>
                <field name="product_description"/>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page string="Flow Details">
                    <group>
                        <field name="flow_json"/>
                        <field name="flow_config_json"/>
                    </group>
                </page>
                <page string="W-Admin" name="w_admin">
                    <group string="Profit" col="4">
                        <field name="profit_type"/>
                        <field name="profit_percentage"/>
                    </group>
                    <group string="Account References" name="account_references" col="4">
                        <field name="direct_cost"/>
                        <field name="indirect_cost"/>
                        <field name="income"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_product_tree_view_inherit_wsuite" model="ir.ui.view">
        <field name="name">product_product_tree_view_inherit_wsuite</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="product_name"/>
            </field>
            <xpath expr="//field[@name='name']" position="attributes">
                 <attribute name="string">Template Name</attribute>
            </xpath>
        </field>
    </record>

    <!-- Product Item Inherit Search View -->
    <record id="product_search_form_view_inherit_wsuite" model="ir.ui.view">
        <field name="name">product_search_form_view_inherit_wsuite</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='filter_to_purchase']" position="after">
                <separator/>
                <filter string="Wsuite" name="wsuite" domain="[('wsuite', '=', True)]"/>
            </xpath>
        </field>
    </record>

</odoo>