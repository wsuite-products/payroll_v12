<?xml version="1.0"?>
<odoo>
    <data>
        <record id="mrp_routing_workcenter_tree_resource_view" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.tree.resource</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='time_cycle']" position="after">
                     <field name="resource_id"/>
                     <field name="task_form_json"/>
                     <field name="is_operational"/>
                 </xpath>
            </field>
        </record>

        <record id="mrp_routing_workcenter_form_resource_view" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form.resource</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='workcenter_id']" position="after">
                     <field name="resource_id"/>
                     <field name="task_form_json"/>
                     <field name="is_operational"/>
                 </xpath>
            </field>
        </record>
    </data>
</odoo>