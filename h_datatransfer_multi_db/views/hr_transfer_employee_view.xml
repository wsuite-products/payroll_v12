<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_transfer_employee_view_tree" model="ir.ui.view">
        <field name="name">hr.transfer.employee.view.tree</field>
        <field name="model">hr.transfer.employee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="database_origin"/>
                <field name="database"/>
                <field name="data"/>
                <field name="state"/>
                <field name="employee_multi_or_single"/>
            </tree>
        </field>
    </record>

    <record id="hr_transfer_employee_view_form" model="ir.ui.view">
        <field name="name">hr.transfer.employee.view.form</field>
        <field name="model">hr.transfer.employee</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_aprroved" type="object"
                            string="Aprroved"
                            states="draft"/>
                    <button name="action_transfered_step_1" type="object"
                            string="Transferred Step 1 Data"
                            attrs="{'invisible':['|', ('check_transfer', '=', False), ('state', '!=', 'approved')]}"/>
                    <button name="action_transfered_step_2" type="object"
                            string="Transferred Step 2 Data"
                            attrs="{'invisible':['|', ('check_transfer', '=', False), ('state', '!=', 'step1')]}"/>
                    <button name="action_transfered_step_3" type="object"
                            string="Transferred Step 3 Data"
                            attrs="{'invisible':['|', ('check_transfer', '=', False), ('state', '!=', 'step2')]}"/>
                    <button name="action_transfer_datas" type="object"
                            string="Transferred"
                            attrs="{'invisible':['|', '|', ('employee_multi_or_single', '=', 'single'), ('check_transfer', '=', False), ('state', '=', 'transfered')]}"/>
                    <button name="action_cancelled" type="object"
                            string="Cancelled"
                            attrs="{'invisible':[('state', 'in', ['transfered', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,in_progress,transfered" />
                </header>
                <sheet>
                    <group>
                        <group colspan="4" col="4">
                            <field name="database_origin" readonly="1"/>
                            <field name="database" required="1"/>
                            <field name="data"/>
                            <field name="check_transfer"/>
                            <field name="employee_multi_or_single" required="1"/>
                            <field name="employee_id"/>
                            <field name="reference"/>
                        </group>
                    </group>
                    <group>
                        <field name="employee_ids"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_transfer_employee_action" model="ir.actions.act_window">
        <field name="name">Transfer Employee</field>
        <field name="res_model">hr.transfer.employee</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="hr_transfer_employee_menu"
        name="Transfer Employee"
        action="hr_transfer_employee_action"
        sequence="99"
        parent="hr.menu_hr_root"/>

</odoo>
