<odoo>

    <record id="view_create_rfq_crm_lead_form" model="ir.ui.view">
        <field name="name">create.rfq.crm.lead.form</field>
        <field name="model">create.rfq.crm.lead</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="crm_lead_line_id" required="1"
                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        <field name="template_id" required="1"
                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        <field name="vendors_ids" required="1" widget="many2many_tags"
                               options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    </group>
                </sheet>
                <footer>
                    <button string='Create RFQ' name="action_create_rfq" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_rfq_crm_lead" model="ir.actions.act_window">
        <field name="name">Create RFQ</field>
        <field name="res_model">create.rfq.crm.lead</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_create_rfq_crm_lead_form"/>
        <field name="target">new</field>
    </record>

</odoo>
