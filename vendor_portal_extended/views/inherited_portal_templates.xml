<odoo>

    <template id="portal_my_home_extended" name="Portal My Home : Extended" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_portal_docs')]" position="after">
            <div>
                <table>
                    <tr>
                        <t t-if="purchase_count">
                            <td>
                                <a href="/my/purchase">
                                    <table style="top: 201px;left: 235px;width: 263px;height: 275px;background: #FFFFFF 0% 0% no-repeat padding-box;box-shadow: 0px 4px 30px #00000019;border: 1px solid #E8E8E8;opacity: 1;">
                                        <tr>
                                            <td style="padding-right: 10px;">
                                                <br/>
                                                <div style="height: 25px;width: 25px;background-color: #0e5d0e;border-radius: 50%;display: inline-block;float: right;">
                                                    <center><span style="color: white;"><t t-esc="purchase_count"/></span></center>
                                                </div>
                                                <br/>
                                                <center>
                                                    <div style="top: 246px;left: 342px;width: 46px;height: 52px;background: transparent url('/vendor_portal_extended/static/src/img/purchase.png') 0% 0% no-repeat padding-box;opacity: 1;"/>
                                                </center>
                                                <br/>
                                            </td>
                                        </tr>
                                        <tr style="top: 342px;left: 236px;width: 261px;height: 133px;background: #F8F8F8 0% 0% no-repeat padding-box;opacity: 1;">
                                            <td>
                                                <center>
                                                    <div style="top: 356px;left: 300px;width: 128px;height: 22px;text-align: center;font: Semibold 16px/22px Open Sans;letter-spacing: 0;color: #404040;opacity: 1;">
                                                    Purchase Orders
                                                    </div>
                                                </center>
                                                <br/>
                                                <div style="top: 403px;left: 245px;width: 238px;height: 57px;text-align: center;font: Regular 12px/17px Open Sans;letter-spacing: 0;color: #868686;opacity: 1;">
                                                    Check here to check your actual orders
                                                </div>
                                                <br/>
                                            </td>
                                        </tr>
                                    </table>
                                </a>
                            </td>
                            <td>&#160;&#160;&#160;&#160;&#160;</td>
                        </t>
                        <t t-if="rfq_count">
                            <td>
                                <a href="/my/rfq">
                                    <table style="top: 201px;left: 235px;width: 263px;height: 275px;background: #FFFFFF 0% 0% no-repeat padding-box;box-shadow: 0px 4px 30px #00000019;border: 1px solid #E8E8E8;opacity: 1;">
                                        <tr>
                                            <td style="padding-right: 10px;">
                                                <div style="height: 25px;width: 25px;background-color: #0e5d0e;border-radius: 50%;display: inline-block;float: right;">
                                                    <center><span style="color: white;"><t t-esc="rfq_count"/></span></center>
                                                </div>
                                                <br/>
                                                <center>
                                                    <div style="top: 246px;left: 342px;width: 46px;height: 52px;background: transparent url('/vendor_portal_extended/static/src/img/rfq.png') 0% 0% no-repeat padding-box;opacity: 1;"/>
                                                </center>
                                            </td>
                                        </tr>
                                        <tr style="top: 342px;left: 236px;width: 261px;height: 133px;background: #F8F8F8 0% 0% no-repeat padding-box;opacity: 1;">
                                            <td>
                                                <center>
                                                    <div style="top: 356px;left: 300px;width: 128px;height: 22px;text-align: center;font: Semibold 16px/22px Open Sans;letter-spacing: 0;color: #404040;opacity: 1;">
                                                        RFQs
                                                    </div>
                                                </center>
                                                <br/>
                                                <div style="top: 403px;left: 245px;width: 238px;height: 57px;text-align: center;font: Regular 12px/17px Open Sans;letter-spacing: 0;color: #868686;opacity: 1;">
                                                    Check here to view your new request from the new Agency
                                                </div>
                                                <br/>
                                            </td>
                                        </tr>
                                    </table>
                                </a>
                            </td>
                            <td>&#160;&#160;&#160;&#160;&#160;</td>
                        </t>
                    </tr>
                </table>
            </div>
        </xpath>
    </template>

</odoo>
