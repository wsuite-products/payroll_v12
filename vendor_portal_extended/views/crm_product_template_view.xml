<odoo>

    <record id="crm_product_template_tree" model="ir.ui.view">
        <field name="name">crm.product.template.view.tree</field>
        <field name="model">crm.product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="crm_product_template_view_form" model="ir.ui.view">
        <field name="name">crm.product.template.view.form</field>
        <field name="model">crm.product.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <group>
                        <field name="template_line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_categ_id" required="1"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="product_id" required="1"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_product_template_action" model="ir.actions.act_window">
        <field name="name">Crm Product Template</field>
        <field name="res_model">crm.product.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="crm_product_template_menu_action"
        name="Crm Product Template"
        action="crm_product_template_action"
        parent="crm.crm_menu_root"/>

</odoo>
