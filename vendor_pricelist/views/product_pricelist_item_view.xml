<?xml version="1.0"?>
<odoo>

    <!-- Product Pricelist Item Inherit Form View -->
    <record id="product_pricelist_item_form_view_vendor_pricelist" model="ir.ui.view">
        <field name="name">product_pricelist_item_form_view_vp_inhertit</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='applied_on']" position="before">
                <field name="pricelist_id" invisible="not context.get('pricelist_check')"/>
            </xpath>
            <xpath expr="//field[@name='base_pricelist_id']" position="after">
                <field name="supplier_id" domain="[('supplier', '=', True)]" attrs="{'invisible':[('base', '!=', 'vendor_price')],'required': [('base','=', 'vendor_price'), ('compute_price', '=', 'formula')]}"/>
            </xpath>
            <xpath expr="//field[@name='date_end']" position="after">
                <field name="vendor_id" domain="[('supplier', '=', True)]" />
                <field name="negotiation_percentage"/>
                <field name="audience_id"/>
                <field name="tag_id"
                       options="{'no_open':'False', 'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
            </xpath>
        </field>
    </record>

    <record id="product_pricelist_form_view_vendor_pricelist" model="ir.ui.view">
        <field name="name">product_pricelist_form_view_vp_inhertit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="vendor_id" class="oe_inline"/>
                <field name="negotiation_percentage" class="oe_inline"/>
            </xpath>
        </field>
    </record>


    <record id="product_pricelist_item" model="ir.actions.act_window">
        <field name="name">Product Pricelist Item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.pricelist.item</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_pricelist_item_main"
              name="Pricelists Item"
              parent="sale.product_menu_catalog"
              action="product_pricelist_item"/>


    <!-- Product Template Item Inherit Form View -->
    <record id="product_template_form_view_inherit_pc" model="ir.ui.view">
        <field name="name">product_template_form_view_inherit_category</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='item_ids']/tree/field[@name='pricelist_id']" position="after">
                <field name="vendor_id"/>
            </xpath>
        </field>
    </record>

   <!-- Product Item Inherit Form View -->
    <record id="product_normal_form_view_inherit_pc" model="ir.ui.view">
        <field name="name">product_normal_form_view_inherit_pc</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='item_ids']" position="replace">
                <field name="item_ids" position="inside" context="{'pricelist_check': True}">
                    <field name="pricelist_item_ids" widget="many2many" context="{'pricelist_check': True}">
                        <tree string="Pricelist Items" editable="bottom">
                            <field name="pricelist_id"/>
                            <field name="vendor_id"/>
                            <field name="name" string="Applicable On"/>
                            <field name="min_quantity"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="price" string="Price"/>
                            <field name="base" invisible="1"/>
                            <field name="sequence" invisible="1"/>
                            <field name="price_discount" invisible="1"/>
                            <field name="applied_on" invisible="1"/>
                            <field name="compute_price" invisible="1"/>
                        </tree>
                    </field>
                </field>
            </xpath>
        </field>
    </record>

</odoo>