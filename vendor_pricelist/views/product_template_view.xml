<?xml version="1.0"?>
<odoo>

    <!-- Product Template Item Inherit Form View -->
    <record id="product_template_form_view_vendor_pricelist" model="ir.ui.view">
        <field name="name">product_template_form_view_vp_inhertit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="after">
                <field name="vendor_price" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>