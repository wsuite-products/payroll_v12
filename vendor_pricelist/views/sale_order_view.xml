<?xml version="1.0"?>
<odoo>

    <!-- Sale Order Inherit Form View -->
    <record id="sale_order_view_form_inherit_vendor_pricelist" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.vendor.pricelist</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="after">
                <field name="supplier_id" options="{'no_create': True}" domain="[('product_tmpl_id', '=', product_tmpl_id)]"/>
                <field name="product_tmpl_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='product_id']" position="after">
                <field name="supplier_id"/>
            </xpath>
        </field>
    </record>

</odoo>