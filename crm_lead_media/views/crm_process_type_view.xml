<?xml version="1.0"?>
<odoo>

    <!-- CRM Process Type tree view-->
    <record id="crm_process_type_tree" model="ir.ui.view">
        <field name="name">CRM Process Type Tree</field>
        <field name="model">crm.process.type</field>
        <field name="arch" type="xml">
            <tree string="CRM Process Type">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- CRM Process Type from view-->
    <record id="crm_process_type_form" model="ir.ui.view">
        <field name="name">CRM Process Type Tree</field>
        <field name="model">crm.process.type</field>
        <field name="arch" type="xml">
            <form string="CRM Process Type">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="crm_process_type_search" model="ir.ui.view">
        <field name="name">CRM Process Type Search</field>
        <field name="model">crm.process.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name', 'ilike', self)]" string="Name.."/>
            </search>
        </field>
    </record>

    <!-- CRM Process Type Action-->
    <record model="ir.actions.act_window" id="crm_process_type_action">
        <field name="name">CRM Process Type</field>
        <field name="res_model">crm.process.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- CRM Process Type Menu-->
    <menuitem
        id="crm_process_type_menu"
        action="crm_process_type_action"
        parent="crm.menu_crm_config_lead"/>

</odoo>