<?xml version="1.0"?>
<odoo>

    <!-- Channel Fringe Lines tree view-->
    <record id="channel_fringe_lines_tree" model="ir.ui.view">
        <field name="name">Channel Fringe Lines Tree</field>
        <field name="model">channel.fringe.lines</field>
        <field name="arch" type="xml">
            <tree string="Channel Fringe Lines">
                <field name="name"/>
                <field name="lead_id"/>
                <field name="per_categ_id"/>
                <field name="channel_id"/>
                <field name="product_tmp_id"/>
                <field name="product_product_id"/>
                <field name="percentage" string="Percentage(%)"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <!-- Channel Fringe Lines from view-->
    <record id="channel_fringe_lines_form" model="ir.ui.view">
        <field name="name">Channel Fringe Lines Form</field>
        <field name="model">channel.fringe.lines</field>
        <field name="arch" type="xml">
            <form string="Channel Fringe Lines">
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group col="4">
                        <field name="lead_id" readonly="context.get('lead')"/>
                        <field name="per_categ_id"/>
                        <field name="channel_id" required="1"/>
                        <field name="product_tmp_id"/>
                        <field name="product_product_id"/>
                        <label for="percentage"/>
                        <div name="percentage">
                            <field name="percentage" class="oe_inline"/> %%
                        </div>
                        <field name="value"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="channel_fringe_lines_search" model="ir.ui.view">
        <field name="name">Channel Fringe Lines Search</field>
        <field name="model">channel.fringe.lines</field>
        <field name="arch" type="xml">
            <search>
                <field name="lead_id" filter_domain="[('lead_id', 'ilike', self)]" string="Lead.."/>
                <field name="per_categ_id" filter_domain="[('per_categ_id', 'ilike', self)]" string="Percentage Category.."/>
                <field name="channel_id" filter_domain="[('channel_id', 'ilike', self)]" string="Category.."/>
                <field name="product_tmp_id" filter_domain="[('product_tmp_id', 'ilike', self)]" string="Product Template.."/>
                <field name="product_product_id" filter_domain="[('product_product_id', 'ilike', self)]" string="Product.."/>
                <group string="Group By">
                  <filter string="Lead" name="lead_id" context="{'group_by':'lead_id'}"/>
                    <filter string="Percentage Category" name="per_categ_id" context="{'group_by':'per_categ_id'}"/>
                    <filter string="Category" name="channel_id" context="{'group_by':'channel_id'}"/>
                    <filter string="Product Template" name="product_tmp_id" context="{'group_by':'product_tmp_id'}"/>
                    <filter string="Product" name="product_product_id" context="{'group_by':'product_product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Channel Fringe Lines Action-->
    <record model="ir.actions.act_window" id="channel_fringe_lines_action">
        <field name="name">Channel Fringe Lines</field>
        <field name="res_model">channel.fringe.lines</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Channel Fringe Lines Menu-->
    <menuitem
        id="channel_fringe_lines_menu"
        action="channel_fringe_lines_action"
        parent="crm.menu_crm_config_lead"/>

</odoo>