<odoo>

        <!-- CRM Audience Attributes tree view-->
    <record id="crm_audience_attributes_tree" model="ir.ui.view">
        <field name="name">CRM Audience Attributes Tree</field>
        <field name="model">crm.audience.attributes</field>
        <field name="arch" type="xml">
            <tree string="CRM Audience Attributes">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- CRM Audience Attributes from view-->
    <record id="crm_audience_attributes_form" model="ir.ui.view">
        <field name="name">CRM Audience Attributes Form</field>
        <field name="model">crm.audience.attributes</field>
        <field name="arch" type="xml">
            <form string="CRM Audience Attributes">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- CRM Audience Attributes Search view-->
    <record id="crm_audience_attributes_search" model="ir.ui.view">
        <field name="name">CRM Audience Attributes Search</field>
        <field name="model">crm.audience.attributes</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- CRM Audience Attributes Action-->
    <record model="ir.actions.act_window" id="crm_audience_attributes_action">
        <field name="name">CRM Audience Attributes</field>
        <field name="res_model">crm.audience.attributes</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- CRM Audience Attributes Menu-->
    <menuitem
        id="crm_audience_attributes_menu"
        name="CRM Audience Attributes"
        action="crm_audience_attributes_action"
        parent="crm.menu_crm_config_lead"
        sequence="17"/>

    <!-- CRM Audience tree view-->
    <record id="crm_audience_tree" model="ir.ui.view">
        <field name="name">CRM Audience Tree</field>
        <field name="model">crm.audience</field>
        <field name="arch" type="xml">
            <tree string="CRM Audience">
                <field name="name"/>
                <field name="type_id"/>
            </tree>
        </field>
    </record>

    <!-- CRM Audience from view-->
    <record id="crm_audience_form" model="ir.ui.view">
        <field name="name">CRM Audience Form</field>
        <field name="model">crm.audience</field>
        <field name="arch" type="xml">
            <form string="CRM Audience">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type_id"/>
                    </group>
                    <group string="CRM Audience Lines">
                        <field name="audience_line_ids" nolabel="1" mode="tree">
                            <tree string="CRM Audience Lines" editable="bottom">
                                <field name="attribute_id"/>
                                <field name="condition"/>
                                <field name="value"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- CRM Audience Search view-->
    <record id="crm_audience_search" model="ir.ui.view">
        <field name="name">CRM Audience Search</field>
        <field name="model">crm.audience</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="type_id"/>
                <field name="name" filter_domain="[('name', 'ilike', self)]" string="Name.."/>
                <field name="type_id" filter_domain="[('type_id', 'ilike', self)]" string="Type.."/>
                <group string="Group By">
                    <filter string="Type" name="type_id" context="{'group_by':'type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- CRM Audience Action-->
    <record model="ir.actions.act_window" id="crm_audience_action">
        <field name="name">CRM Audience</field>
        <field name="res_model">crm.audience</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- CRM Audience Menu-->
    <menuitem
        id="crm_audience_menu"
        name="CRM Audience"
        action="crm_audience_action"
        parent="crm.menu_crm_config_lead"
        sequence="20"/>

    <!-- CRM Audience Type Tree view-->
    <record id="crm_audience_type_tree" model="ir.ui.view">
        <field name="name">CRM Audience Type Tree</field>
        <field name="model">crm.audience.type</field>
        <field name="arch" type="xml">
            <tree string="CRM Audience Type">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- CRM Audience Type from view-->
    <record id="crm_audience_type_form" model="ir.ui.view">
        <field name="name">CRM Audience Type Form</field>
        <field name="model">crm.audience.type</field>
        <field name="arch" type="xml">
            <form string="CRM Audience Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- CRM Audience Type Search view-->
    <record id="crm_audience_type_search" model="ir.ui.view">
        <field name="name">CRM Audience Type Search</field>
        <field name="model">crm.audience.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- CRM Audience Type Action-->
    <record model="ir.actions.act_window" id="crm_audience_type_action">
        <field name="name">CRM Audience Type</field>
        <field name="res_model">crm.audience.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- CRM Audience Type Menu-->
    <menuitem
        id="crm_audience_type_menu"
        name="CRM Audience Type"
        action="crm_audience_type_action"
        parent="crm.menu_crm_config_lead"
        sequence="17"/>






</odoo>