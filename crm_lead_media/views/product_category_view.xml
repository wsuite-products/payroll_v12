<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_category_form_inherit_media" model="ir.ui.view">
            <field name="name">product.category.form.inherit.media</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_delete_category_related_data" groups="base_extended.group_pcd" type="object" string="Delete Records" class="oe_stat_button" icon="fa-trash"
                            confirm="Are you sure you want to delete records?. This deletes the Assets, Module, Lead, Bom, Sale/Manufacturing Order, Routing, related to this Product Category!"/>
                    <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                        <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                    </button>
                </xpath>
                <xpath expr="//group[@name='first']" position="after">
                    <group>
                        <field name="product_type" class="oe_inline"/>
                        <field name="media"/>
                        <field name="fringe"/>
                        <field name="channel"/>
                        <field name="no_show"/>
                        <field name="quotation_template_category"/>
                        <field name="icon"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="CRM Product Category Tag">
                            <field name="crm_product_categ_tag_ids" nolabel="1"/>
                        </page>
                        <page string="CRM Audience">
                            <field name="crm_audience_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

        <record id="product_category_search_view_inherit_media" model="ir.ui.view">
            <field name="name">product.category.search.media</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <filter string="Media is Set" name="media" domain="[('media','=', True)]"/>
                    <filter string="Media is not Set" name="media" domain="[('media','=', False)]"/>
                    <filter string="Fringe is Set" name="fringe" domain="[('fringe','=', True)]"/>
                    <filter string="Fringe is not Set" name="fringe" domain="[('fringe','=', False)]"/>
                    <filter string="Channel is Set" name="channel" domain="[('channel','=', True)]"/>
                    <filter string="Channel is not Set" name="channel" domain="[('channel','=', False)]"/>
                    <filter string="No Show is Set" name="no_show" domain="[('no_show','=', True)]"/>
                    <filter string="No Show is not Set" name="no_show" domain="[('no_show','=', False)]"/>
                </xpath>
            </field>
        </record>

        <!-- CRM Product Category Tag tree view-->
        <record id="crm_product_category_tag_tree" model="ir.ui.view">
            <field name="name">CRM Product Category Tag Tree</field>
            <field name="model">crm.product.categ.tag</field>
            <field name="arch" type="xml">
                <tree string="CRM Product Category Tag">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="value"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <!-- CRM Product Category Tag from view-->
        <record id="crm_product_category_tag_form" model="ir.ui.view">
            <field name="name">CRM Product Category Tag Form</field>
            <field name="model">crm.product.categ.tag</field>
            <field name="arch" type="xml">
                <form string="CRM Product Category Tag">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="value"/>
                            <field name="date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- CRM Product Category Tag Search view-->
        <record id="crm_product_category_tag_search" model="ir.ui.view">
            <field name="name">CRM Product Category Tag Search</field>
            <field name="model">crm.product.categ.tag</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="value"/>
                </search>
            </field>
        </record>

        <!-- CRM Product Category Tag Action-->
        <record model="ir.actions.act_window" id="crm_product_category_tag_action">
            <field name="name">CRM Product Category Tag</field>
            <field name="res_model">crm.product.categ.tag</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- CRM Product Category Tag Menu-->
        <menuitem
            id="crm_product_category_tag_menu"
            name="CRM Product Category Tag"
            action="crm_product_category_tag_action"
            parent="crm.menu_crm_config_lead"
            sequence="15"/>

    </data>
</odoo>
