    <!-- MRP Production Inherit Form View -->
    <record id="mrp_production_form_view_wtrack" model="ir.ui.view">
        <field name="name">mrp.mrp_production_form_view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Comments">
                    <field name="comment_ids" nolabel="1">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="type"/>
                            <field name="comment"/>
                            <field name="user_id"/>
                            <field name="attachment" filename="file_name"/>
                            <field name="filesize"/>
                            <field name="attachment_url" widget="url"/>
                            <field name="final_asset"/>
                        </tree>
                        <form>
                            <group col="4">
                                <field name="comment" required="1"/>
                                <field name="user_id"/>
                                <field name="type"/>
                                <field name="order_id"/>
                                <field name="attachment" filename="file_name"/>
                                <field name="attachment_url" widget="url"/>
                                <field name="filesize"/>
                                <field name="create_date"/>
                                <field name="write_date"/>
                                <field name="order_id"/>
                                <field name="final_asset"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='availability']" position="after">
                <group>
                    <field name="sale_order_id"/>
                    <field name="sale_order_line_id"/>
                    <field name="purchase_order_id"/>
                    <field name="purchase_order_line_id"/>
                    <field name="task_assignee_config"/>
                    <field name="lead_id"/>
                    <field name="lead_line_id"/>
                    <field name="quotation_number"/>
                    <field name="brand_id"/>
                    <field name="step_id"/>
                </group>
            </xpath>
        </field>
    </record>


</odoo>