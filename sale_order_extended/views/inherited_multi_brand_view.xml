<odoo>

    <record id="view_multi_brand_form_inherit" model="ir.ui.view">
        <field name="name">multi.brand.form.inherit</field>
        <field name="model">multi.brand</field>
        <field name="inherit_id" ref="multi_brand.multi_brand_form"/>
        <field name="arch" type="xml">
            <field name="description" position="after">
                <field name="partner_id"
                       options="{'no_create_edit': True}"/>
                <field name="users_ids" widget="many2many_tags"
                       options="{'no_create_edit': True}"/>
                <field name="service_agreement"/>
            </field>
        </field>
    </record>

    <record id="multi_brand_view_search_inherit" model="ir.ui.view">
        <field name="name">multi.brand.search.inherit</field>
        <field name="model">multi.brand</field>
        <field name="inherit_id" ref="multi_brand.multi_brand_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="filter[@name='categ_ids']" position="after">
                <filter string="User is set" name="users_ids" domain="[('users_ids', '!=', False)]"/>
                <filter string="User is not set" name="users_ids" domain="[('users_ids', '=', False)]"/>
                <group string="Group By">
                    <filter string="Partner" name="partner_id" context="{'group_by':'partner_id'}"/>
                </group>
            </xpath>
        </field>
    </record>


</odoo>
