<odoo>

    <record id="product_attributes_view_tree" model="ir.ui.view">
        <field name="name">product.attributes.view.tree</field>
        <field name="model">product.attributes</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="date"/>
                <field name="tax_ids" widget="many2many_tags"
                       options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="product_id"
                       options="{'no_create': True, 'no_create_edit': True}"/>
            </tree>
        </field>
    </record>

    <record id="product_attributes_action" model="ir.actions.act_window">
        <field name="name">Product Attributes</field>
        <field name="res_model">product.attributes</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="product_attributes_menu_action"
        name="Product Attributes"
        action="product_attributes_action"
        parent="sale.product_menu_catalog"/>

</odoo>
