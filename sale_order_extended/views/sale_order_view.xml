<?xml version="1.0"?>
<odoo>

    <!-- Sale Order Inherit Form View -->
    <record id="sale_order_view_form_inherit_wadmin" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.wadmin</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="hours"/>
                <field name="fee_amount"/>
                <field name="quotation_ax"/>
                <field name="revision_ax"/>
                <field name="quotation_number"/>
                <field name="fee_check"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="product_template_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="attributes">
                <attribute name="string">Unit Price</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
                <field name="price" string="Price"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                <field name="product_tmpl_id"/>
                <field name="res_supplier_id"/>
                <field name="order_date"/>
                <field name="quotation_number"/>
                <field name="check_ads_service"/>
                <field name="hours" attrs="{'readonly':[('product_id', '!=', False)]}" force_save="1"/>
                <field name="crm_lead_line_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='price_unit']" position="attributes">
                <attribute name="string">Unit Price</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='price_unit']" position="after">
                <field name="price" string="Price"/>
                <field name="product_tmpl_id"/>
                <field name="order_date"/>
                <field name="res_supplier_id"/>
                <field name="quotation_number"/>
                <field name="check_ads_service"/>
                <field name="hours" attrs="{'readonly':[('product_id', '!=', False)]}" force_save="1"/>
                <field name="crm_lead_line_id" invisible="1"/>
                <field name="line_number"/>
                <field name="line_property"/>
                <field name="ax_id"/>
                <field name="transaction_type"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_mo_details"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-list-alt"
                    help="Manufacturing Orders"
                    attrs="{'invisible': [('manufacturing_order_count', '=', 0)]}">
                    <field name="manufacturing_order_count" widget="statinfo" string="MO"/>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Comments">
                    <field name="comment_ids" nolabel="1">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="comment" required="1"/>
                            <field name="user_id"/>
                            <field name="attachment" filename="file_name"/>
                            <field name="attachment_url" widget="url"/>
                        </tree>
                        <form>
                            <group col="4">
                                <field name="comment" required="1"/>
                                <field name="user_id"/>
                                <field name="attachment" filename="file_name"/>
                                <field name="attachment_url" widget="url"/>
                                <field name="product_tmpl_id"/>
                                <field name="create_date"/>
                                <field name="write_date"/>
                                <field name="order_id"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="crm_lead_view_form_inherit_wadmin_campaign_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.wadmin.campaign.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm_lead_extended.crm_lead_view_form_inherit_wadmin_campaign"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='crm_lead_line_ids']//form/group" position="after">
                <field name="comment_ids" nolabel="1">
                    <tree>
                        <field name="sequence" widget="handle"/>
                        <field name="comment" required="1"/>
                        <field name="user_id"/>
                        <field name="attachment" filename="file_name"/>
                        <field name="attachment_url" widget="url"/>
                    </tree>
                    <form>
                        <group col="4">
                            <field name="comment" required="1"/>
                            <field name="user_id"/>
                            <field name="attachment" filename="file_name"/>
                            <field name="attachment_url" widget="url"/>
                            <field name="product_tmpl_id"/>
                            <field name="create_date"/>
                            <field name="write_date"/>
                            <field name="lead_line_id"/>
                        </group>
                    </form>
                </field>
            </xpath>
            <xpath expr="//field[@name='crm_lead_line_ids']//tree/field[@name='quote_type']" position="after">
                <field name="comment_ids"/>
            </xpath>
        </field>
    </record>

</odoo>
