<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_mail" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mail</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='access_rights']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="disable_mail"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Disable send mail" for="disable_mail"/>
<!--                        <div class="text-muted">-->
<!--                            Disable send mail-->
<!--                        </div>-->
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
