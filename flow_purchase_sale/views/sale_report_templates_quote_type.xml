<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="external_layout_standard_quote_type">

    <div class="header">
        <div class="row" style="font-size: 13px;">
            <div class="col-5 mb4">
                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="width:100px;" alt="Logo"/>
                <div t-field="company.partner_id"
                    t-options='{"widget": "contact", "fields": ["name", "address", "phone", "fax", "email", "website", "vat"], "no_marker": true}'
                />
            </div>
        </div>
        <br/>
        <div class="col-12 mb4 text-center">
            <strong>COMPARATIVE TABLE No <span t-esc="data['No']" /> Version 1</strong>
            <br/>
        </div>
        <br/>
        <div class="row" style="font-size: 13px;">
            <div class="col-6 mb4">
                <table width="100%">
                    <tr>
                        <td width="25%" class="text-right"><strong>Client:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Cliente']" /></td>
                    </tr>
                    <tr>
                        <td width="25%" class="text-right"><strong>Product:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Producto']" /></td>
                    </tr>
                    <tr>
                        <td width="25%" class="text-right"><strong>Reference:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Referencia']" /></td>
                    </tr>
                    <tr>
                        <td width="25%" class="text-right"><strong>Date:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/></td>
                    </tr>
                    <tr>
                        <td  width="25%" class="text-right"><strong>Currency:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Moneda']" /></td>
                    </tr>
                    <tr>
                        <td width="25%" class="text-right"><strong>Order ID:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Proyecto_ID']" /></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="article o_report_layout_standard" style="font-size:12px;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
        <t t-call="web.address_layout"/>
        <t t-raw="0"/>
    </div>
    <div class="footer">
        <div class="row" style="font-size: 11px;">
            <div class="col-4 mb4 text-center">
            </div>
            <div class="col-5 mb4 text-center">
                COMPARATIVE TABLE No <span t-esc="data['No']" /> Version 1
            </div>
            <div t-if="report_type == 'pdf'" class="col-3 mb4 text-muted text-right">
                <span class="page"/> / <span class="topage"/>
            </div>
        </div>
    </div>
</template>

<template id="quote_type_external_layout_fps">
    <t t-if="not o" t-set="o" t-value="doc"/>

    <t t-if="not company">
        <t t-if="company_id">
            <t t-set="company" t-value="company_id"/>
        </t>
        <t t-elif="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-else="else">
            <t t-set="company" t-value="res_company"/>
        </t>
    </t>

    <t t-call="flow_purchase_sale.external_layout_standard_quote_type"><t t-raw="0"/></t>

</template>

<template id="report_saleorder_quote_type_custom">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <t t-call="flow_purchase_sale.quote_type_external_layout_fps">
        <div class="page">
            <div class="oe_structure"/>
            <table width="100%" style="border: 1px solid black;">
                <tr class="text-center" style="border: 1px solid black;height:20px;background-color:#BEBEBE;">
                    <th width="28%" style="border: 1px solid black;" rowspan="3"> Quoted</th>
                    <th width="8%" style="border: 1px solid black;">Provider <br/>Qty.</th>
                    <th width="10%" style="border: 1px solid black;">Vr. Unit</th>
                    <th width="10%" style="border: 1px solid black;">Vr Total</th>
                    <th width="10%" style="border: 1px solid black;">Iva</th>
                    <th width="8%" style="border: 1px solid black;">% SP</th>
                    <th width="8%" style="border: 1px solid black;">Vr SP</th>
                    <th width="8%" style="border: 1px solid black;">IVA Vr SP</th>
                    <th width="10%" style="border: 1px solid black;">Total</th>
                </tr>
                <tbody class="sale_tbody">
                    <t t-foreach="list_data" t-as="line">
                        <tr>
                            <td style="padding-left:5px;border-right: 1px solid black;" colspan="9"><strong><span t-esc="line.get('Cotizado')"/></strong></td>
                        </tr>
                        <tr style="border-right: 1px solid black;">
                            <td style="padding-left:5px;border-right: 1px solid black;" colspan="9"><span t-esc="data['Producto']" /></td>
                        </tr>
                        <t t-if="line.get('is_ads')">
                            <tr style="border-right: 1px solid black;">
                                <td style="padding-left:5px;border-right: 1px solid black;" colspan="9"><span><strong>Advertising Services</strong></span></td>
                            </tr>
                        </t>
                        <tr class="text-center" style="border-bottom: 1px solid black;">
                            <td></td>
                            <td><span t-esc="float(line.get('Proveedor_Cant'))" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></td>
                            <td><span t-esc="float(line.get('Vr_Unitario'))" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                            <td><span t-esc="float(line.get('Vr_Total'))" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                            <td><span t-esc="float(line.get('Iva'))" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                            <td><span t-esc="float(line.get('SP'))" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                            <td><span t-esc="float(line.get('Vr_SP'))" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                            <td><span t-esc="float(line.get('IVA_Vr_SP'))" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                            <td><span t-esc="float(line.get('Total'))" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
            <br/>
            <table width="100%">
                <tr class="text-left" style="background-color:#D0D0D0">
                    <td width="85%" style="padding-left:5px;">TOTAL SUPPLIERS</td>
                    <td></td>
                </tr>
                <tr>
                    <td class="text-left" style="padding-left:5px;" width="85%"><span t-esc="data['Producto']" /></td>
                    <td class="text-right" width="15%">
                        <span t-esc="float(data['all_line_total'])" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                    </td>
                </tr>
                <tr>
                    <td class="text-right"> TOTAL:</td>
                    <td class="text-right" width="15%">
                        <span t-esc="float(data['all_line_total'])" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                    </td>
                </tr>
            </table>
            <hr style="background-color:#D0D0D0;height:17px;"/>
            <p>
                <strong> Observations:</strong>
            </p>
            <br/><br/><br/>
            <table width="100%">
                <tr class="text-center">
                    <td width="50%">___________________________________________________</td>
                    <td width="50%">___________________________________________________</td>
                </tr>
                <tr class="text-center">
                    <td>PROJECT MANAGEMENT DIRECTOR</td>
                    <td>ACCOUNT'S MANAGER</td>
                </tr>
            </table>
        </div>
    </t>
</template>

<template id="report_saleorder_quote_type">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="flow_purchase_sale.report_saleorder_quote_type_custom" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
