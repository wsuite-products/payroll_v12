<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="create_purchase_order_form_view" model="ir.ui.view">
        <field name="name">create.purchase.order.form.view</field>
        <field name="model">create.purchase.order</field>
        <field name="arch" type="xml">
            <form string="Reason Change Wizard">
                <group colspan="4" col="4">
                    <field name="partner_id" required="1"
                           domain="[('supplier','=',True)]"
                           options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="date_order" required="1"/>
                </group>
                <group>
                    <field name="cpol_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="product_id" required="1"/>
                            <field name="name" required="1"/>
                            <field name="product_qty" required="1"/>
                            <field name="price_unit" required="1"/>
                            <field name="price_subtotal" required="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Create Purchase Order" name="action_create_purchase_order" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_purchase_order" model="ir.actions.act_window">
        <field name="name">Create Purchase Order</field>
        <field name="res_model">create.purchase.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_purchase_order_form_view"/>
        <field name="target">new</field>
    </record>

</odoo>
