<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_hr_novelty_form_s3">
        <field name="name">hr.novelty.form.s3</field>
        <field name="model">hr.novelty</field>
        <field name="inherit_id" ref="hr_novelty.view_hr_novelty_form"/>
        <field name="arch" type="xml">
            <field name="birth_certificate" position="after">
                <field name="birth_certificate_url" widget="url"
                       attrs="{'readonly':[('id', '!=', False)]}"/>
            </field>
            <field name="certificate_born_alive" position="after">
                <field name="certificate_born_alive_url" widget="url"
                       attrs="{'readonly':[('id', '!=', False)]}"/>
            </field>
            <field name="certificate_week_of_gestation" position="after">
                <field name="certificate_week_of_gestation_url" widget="url"
                       attrs="{'readonly':[('id', '!=', False)]}"/>
            </field>
            <field name="original_maternity_leave" position="after">
                <field name="original_maternity_leave_url" widget="url"
                       attrs="{'readonly':[('id', '!=', False)]}"/>
            </field>
        </field>
    </record>

</odoo>
