<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_step" model="ir.module.category">
            <field name="name">Step</field>
            <field name="description">Helps you manage your step for review of different-different users.</field>
            <field name="sequence">20</field>
        </record>


        <!-- Step users -->
        <record model="res.groups" id="group_step_user">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_step"/>
        </record>

        <!-- Step managers -->
        <record model="res.groups" id="group_step_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_step"/>
            <field name="implied_ids" eval="[(4, ref('group_step_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_step_manager'))]"/>
        </record>

        <!-- Record rules -->
        <record id="step_users_access" model="ir.rule">
            <field name="name">Access to step for regular users</field>
            <field name="model_id" ref="step.model_step_step"/>
            <field name="domain_force">[('stage_id.closed', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_step_user'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

        <record id="step_manager_access" model="ir.rule">
            <field name="name">Step Manager access rights</field>
            <field name="model_id" ref="step.model_step_step"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_step_manager'))]"/>
            <field eval="1" name="perm_unlink"/>
            <field eval="1" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="1" name="perm_create"/>
        </record>

        <record id="step_input_public_access" model="ir.rule">
            <field name="name">Public access to user_input</field>
            <field name="model_id" ref="step.model_step_user_input"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user')), (4, ref('base.group_portal')), (4, ref('base.group_public'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

        <record id="step_input_users_access" model="ir.rule">
            <field name="name">Access to user_input for regular users</field>
            <field name="model_id" ref="step.model_step_user_input"/>
            <field name="domain_force">['|', ('create_uid', '=', user.id), ('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_step_user'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

        <record id="step_input_manager_access" model="ir.rule">
            <field name="name">Step Manager access rights</field>
            <field name="model_id" ref="step.model_step_user_input"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_step_manager'))]"/>
            <field eval="1" name="perm_unlink"/>
            <field eval="1" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="1" name="perm_create"/>
        </record>

    </data>
</odoo>
