<odoo>

    <record id="linkedin_data_configuration_view_tree" model="ir.ui.view">
        <field name="name">linkedin.data.configuration.view.tree</field>
        <field name="model">linkedin.data.configuration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="api_key"/>
                <field name="user"/>
                <field name="return_url"/>
            </tree>
        </field>
    </record>

    <record id="linkedin_data_configuration_view_form" model="ir.ui.view">
        <field name="name">linkedin.data.configuration.view.form</field>
        <field name="model">linkedin.data.configuration</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group colspan="4" col="4">
                            <field name="api_key" required="1"/>
                            <field name="secret_key" required="1"/>
                            <field name="user" required="1"/>
                            <field name="password" password="True" required="1"/>
                            <field name="return_url" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="linkedin_data_configuration_action" model="ir.actions.act_window">
        <field name="name">LinkedIn Data</field>
        <field name="res_model">linkedin.data.configuration</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="linkedin_data_configuration_menu_action"
        name="LinkedIn Data"
        action="linkedin_data_configuration_action"
        parent="hr.menu_human_resources_configuration"/>

</odoo>
