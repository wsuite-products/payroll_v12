<?xml version="1.0"?>
<odoo>
    <!-- Inherit Form Users -->
    <record id="vendor_portal_product_res_users_inherit_form" model="ir.ui.view">
        <field name="name">vendor_portal_product.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='lang']" position="after">
                <field name="is_vendor_portal" invisible="0"/>
            </xpath>

        </field>
    </record>

</odoo>