<?xml version="1.0"?>
<odoo>
    <!-- Inherit Form Partner -->
    <record id="vendor_portal_product_res_partner_inherit_form" model="ir.ui.view">
        <field name="name">vendor_portal_product.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_vendor_portal" invisible="0"/>
            </xpath>

        </field>
    </record>

    <record id="action_res_partner_portal_supplier_form" model="ir.actions.act_window">
        <field name="name">Portal Vendors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="domain">[('is_vendor_portal', '=', True)]</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="filter" eval="True"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new vendor in your address book
          </p><p>
            Odoo helps you easily track all activities related to a vendor.
          </p>
        </field>
    </record>

    <menuitem name="Portal Vendors" id="vendor_portal_product_res_partner_menu_action"
              action="action_res_partner_portal_supplier_form"
              parent="vendor_portal_product_vendor_menu_action_root" sequence="10"/>

</odoo>