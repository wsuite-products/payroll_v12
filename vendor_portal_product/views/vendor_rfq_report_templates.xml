<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="external_layout_standard_report_vendor_rfq">

    <div class="header">
        <div class="row" style="font-size: 13px;">
            <div class="col-5 mb4">
                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="width:100px;" alt="Logo"/>
                <div t-field="company.partner_id"
                    t-options='{"widget": "contact", "fields": ["name", "address", "phone", "fax", "email", "website", "vat"], "no_marker": true}'
                />
            </div>
        </div>
        <br/>
        <div class="col-12 mb4 text-center">
            <strong>COMPARATIVE CHART <span t-esc="data['No']" /> Version 1</strong>
            <br/>
        </div>
        <br/>
        <div class="row" style="font-size: 13px;">
            <div class="col-6 mb4">
                <table width="100%">
                    <tr>
                        <td width="20%" class="text-right"><strong>Client:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Cliente']" /></td>
                    </tr>
                    <tr>
                        <td width="20%" class="text-right"><strong>Product:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Producto']" /></td>
                    </tr>
                    <tr>
                        <td width="20%" class="text-right"><strong>Reference:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Referencia']" /></td>
                    </tr>
                    <tr>
                        <td width="20%" class="text-right"><strong>Date:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/></td>
                    </tr>
                    <tr>
                        <td  width="20%" class="text-right"><strong>Currency:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Moneda']" /></td>
                    </tr>
                    <tr>
                        <td width="20%" class="text-right"><strong>Draft ID:</strong></td>
                        <td width="5%"></td>
                        <td><span t-esc="data['Proyecto_ID']" /></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="article o_report_layout_standard" style="font-size:12px;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
        <t t-call="web.address_layout"/>
        <t t-raw="0"/>
    </div>

    <div class="footer">
        <div class="row" style="font-size: 11px;">
            <div class="col-12 mb4 text-right" style="font-size: 11px;">
                <span class="page"/> / <span class="topage"/>
            </div>
        </div>
    </div>
</template>

<template id="report_vendor_rfq_external_layout">
    <t t-if="not o" t-set="o" t-value="doc"/>

    <t t-if="not company">
        <t t-if="company_id">
            <t t-set="company" t-value="company_id"/>
        </t>
        <t t-elif="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-else="else">
            <t t-set="company" t-value="res_company"/>
        </t>
    </t>
    <t t-call="vendor_portal_product.external_layout_standard_report_vendor_rfq"><t t-raw="0"/></t>
</template>

<template id="report_vendor_rfq_custom">
        <t t-set="doc" t-value="doc.with_context(lang=doc.crm_lead_line_id.crm_lead_id.partner_id.lang)" />
        <t t-call="vendor_portal_product.report_vendor_rfq_external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <table width="100%" style="border: 1px solid black;">
                <tr class="text-center" style="border: 1px solid black;height:20px;background-color:#BEBEBE;">
                    <th width="20%">
                        Quotation: <span t-esc="data['Cotizacion']"/> &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp; Version: <span t-esc="data['Version']"/> <br/><br/>
                        Director/Photographer <br/>
                        Days Shooting/Photos <br/>
                        Commercial/Photos <br/>
                        Reference <br/>
                        Duration <br/>
                        Format <br/>
                    </th>
                    <t t-foreach="supplier_list_data" t-as="s_line">
                        <th width="14%">
                            <span t-esc="s_line['name']"/><br/>
                            <span t-esc="s_line['Director_Fotografo']"/><br/>
                            <span t-esc="s_line['Dias_Rodaje_Fotos']"/><br/>
                            <span t-esc="s_line['Comercial_Fotos']"/><br/>
                            <span t-esc="s_line['Referencia']"/><br/>
                            <span t-esc="s_line['Duracion']"/><br/>
                            <span t-esc="s_line['Formato']"/><br/>
                        </th>
                    </t>
                    <t t-foreach="range(remaining_length)" t-as="item">
                        <th width="14%"></th>
                    </t>
                </tr>
                <tr style="height:20px;background-color:#BEBEBE;">
                    <th colspan="6"><span t-esc="data['Template_name']"/></th>
                </tr>
                <t t-foreach="final_list" t-as="f">
                    <tr style="border: 1px solid black;height:20px;">
                        <td><strong><span t-esc="f['category_name']"/></strong></td>
                        <t t-foreach="supplier_list_data" t-as="s_line">
                            <td style="border: 1px solid black;height:20px;">
                                &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Cant
                                &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Dias
                                &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;VrTotal
                            </td>
                        </t>
                        <t t-foreach="range(remaining_length)" t-as="item">
                            <td style="border: 1px solid black;height:20px;" width="14%"></td>
                        </t>
                    </tr>
                    <t t-foreach="f['data_list']" t-as="a">
                        <tr style="border: 1px solid black;height:20px;">
                            <td style="border: 1px solid black;height:20px;"><span t-esc="a['product_name']"/></td>
                            <t t-foreach="a['supp_line_details']" t-as="b">
                                <td style="border: 1px solid black;height:20px;">
                                    <span style="padding-left: 15px;"  t-esc="float(b['qty'])" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/>
                                    <span style="padding-left: 22px;" t-esc="b['Dias']"/>
                                    <span style="padding-left: 50px;" t-esc="float(b['price_subtotal'])" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    <span style="padding-left: 15px;" t-esc="b['note']"/>
                                </td>
                            </t>
                            <t t-foreach="range(remaining_length)" t-as="item">
                                <td style="border: 1px solid black;height:20px;" width="14%"></td>
                            </t>
                        </tr>
                    </t>
                    <tr>
                        <td style="border: 1px solid black;height:20px;"><strong>Total <span t-esc="f['category_name']"/></strong></td>
                        <t t-foreach="supplier_total_list_data" t-as="b">
                            <t t-if="b['category_name'] == f['category_name']">
                                <t t-foreach="supplier_list_data" t-as="s_line">
                                    <td style="border: 1px solid black;height:20px;" class="text-right">
                                        <strong><span t-esc="float(b.get(s_line['name']))" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></strong>
                                    </td>
                                </t>
                            </t>
                        </t>
                        <t t-foreach="range(remaining_length)" t-as="item">
                            <td style="border: 1px solid black;height:20px;" width="14%"></td>
                        </t>
                    </tr>
                </t>
                <tr style="border: 1px solid black;height:20px;background-color:#BEBEBE;">
                    <td style="border: 1px solid black;height:20px;"><strong>Total Quotation</strong></td>
                    <t t-foreach="supplier_list_data" t-as="s_line">
                        <t t-set="s_total" t-value="0"/>
                        <t t-foreach="supplier_total_list_data" t-as="b">
                            <t t-set="s_total" t-value="s_total + b.get(s_line['name'])"/>
                        </t>
                        <td style="border: 1px solid black;height:20px;" class="text-right">
                            <strong><span t-esc="float(s_total)" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></strong>
                        </td>
                    </t>
                    <t t-foreach="range(remaining_length)" t-as="item">
                        <td style="border: 1px solid black;height:20px;" width="14%"></td>
                    </t>
                </tr>
            </table><br/>

            <table width="100%" style="border: 1px solid black;">
                <t t-foreach="supplier_list_data" t-as="s_line">
                    <t t-set="s_total" t-value="0"/>
                    <t t-set="s_total_AGENCIA" t-value="0"/>
                    <tr class="text-center" style="border: 1px solid black;height:20px;background-color:#BEBEBE;">
                        <t t-foreach="supplier_total_list_data" t-as="b">
                            <t t-set="s_total" t-value="s_total + b.get(s_line['name'])"/>
                        </t>
                        <th width="30%">
                            <span t-esc="s_line['name']"/><br/>
                        </th>
                        <th width="50%">Notes</th>
                        <th  width="20%" class="text-right">
                            <span style="padding-right: 35px;" t-esc="float(s_total)" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </th>
                    </tr>
                    <tr>
                        <t t-set="s_total_AGENCIA" t-value="s_total_AGENCIA + s_total * doc.crm_lead_line_id.crm_lead_id.brand_id.advertising_services_percentage / 100"/>
                        <td>SUBTOTAL AGENCY</td>
                        <td rowspan="7">
                            <t t-foreach="doc.rfq_line_ids" t-as="rfq_line">
                                <t t-if="s_line['name'] == rfq_line.vendor_id.name">
                                    <span class="text-center" t-esc="rfq_line.note"/>
                                </t>
                            </t>
                        </td>
                        <td  width="20%" class="text-right">
                            <span style="padding-right: 35px;" t-esc="float(s_total_AGENCIA)" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td>I.V.A. AGENCY</td>
                        <td  width="20%" class="text-right">
                            <span style="padding-right: 35px;" t-esc="float(0.0)" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td>SUPPLIER SUBTOTAL</td>
                        <td  width="20%" class="text-right">
                            <span style="padding-right: 35px;" t-esc="float(s_total)" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td>I.V.A</td>
                        <td  width="20%" class="text-right">
                            <span style="padding-right: 35px;" t-esc="float(0.0)" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td>ADVERTISING SERVICES 0.00 OVER 0.00</td>
                        <td  width="20%" class="text-right">
                            <span style="padding-right: 35px;" t-esc="float(0.0)" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td>I.V.A. ADVERTISING SERVICES</td>
                        <td  width="20%" class="text-right">
                            <span style="padding-right: 35px;" t-esc="float(0.0)" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                    <tr>
                        <td>TOTAL PROPOSAL</td>
                        <td  width="20%" class="text-right">
                            <span style="padding-right: 35px;" t-esc="float(s_total + s_total_AGENCIA)" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                </t>
            </table>
            <br/><br/><br/>
            <table width="100%">
                <tr class="text-center">
                    <td width="50%">___________________________________________________</td>
                    <td width="50%">___________________________________________________</td>
                </tr>
                <tr class="text-center">
                    <td>PROJECT MANAGER</td>
                    <td>ACCOUNT EXECUTIVE</td>
                </tr>
            </table>
        </div>
    </t>
</template>

<template id="report_vendor_rfq">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="vendor_portal_product.report_vendor_rfq_custom" t-lang="doc.crm_lead_line_id.crm_lead_id.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
