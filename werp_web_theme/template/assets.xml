<odoo>
	
	<template id="assets_common" name="Common Assets" inherit_id="web_editor.assets_common">
		<xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/fonts.scss"/>
		</xpath>
		<xpath expr="//script[last()]" position="after">
		</xpath>
	</template>
	
	<template id="assets_editor" name="Editor Assets" inherit_id="web_editor.assets_editor">
		<xpath expr="//link[last()]" position="after">
		</xpath>
		<xpath expr="//script[last()]" position="after">
		</xpath>
	</template>

	<template id="_assets_primary_variables" name="Colors" inherit_id="web._assets_primary_variables" priority="15">
        <xpath expr="//link[@href='/web/static/src/scss/primary_variables.scss']" position="after">
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/colors.scss"/>
        </xpath>
    </template>
    
	<template id="_assets_backend_helpers" name="Variables" inherit_id="web._assets_backend_helpers" priority="15">
        <xpath expr="//link[@href='/web/static/src/scss/bootstrap_overridden.scss']" position="after">
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/variables.scss"/>
        </xpath>
    </template>

	<template id="assets_backend" name="Backend Assets" inherit_id="web.assets_backend">
		<xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/libs/simplebar/simplebar.css" />
		</xpath>
		<xpath expr="//script[last()]" position="after">
			<script type="text/javascript" src="/werp_web_theme/static/libs/simplebar/simplebar.js" />
		</xpath>
		<xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/mixins.scss"/>
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/layout.scss"/>
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/navbar.scss"/>
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/apps.scss"/>
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/appsbar.scss"/>
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/control_panel.scss"/>
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/list_view.scss"/>
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/form_view.scss"/>
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/scss/fields.scss"/>
            <link rel="stylesheet" type="text/scss" href="/werp_web_theme/static/src/css/new-styles.css"/>
            <link rel="stylesheet" type="text/scss" href="https://fonts.googleapis.com/css?family=Open+Sans"/>
		</xpath>
		<xpath expr="//script[last()]" position="after">
			<script type="text/javascript" src="/werp_web_theme/static/src/js/chrome/menu.js" />
			<script type="text/javascript" src="/werp_web_theme/static/src/js/chrome/apps.js" />
			<script type="text/javascript" src="/werp_web_theme/static/src/js/chrome/appsbar.js" />
			<script type="text/javascript" src="/werp_web_theme/static/src/js/chrome/sidebar.js" />
			<script type="text/javascript" src="/werp_web_theme/static/src/js/fields/status.js" />
			<script type="text/javascript" src="/werp_web_theme/static/src/js/views/search_view.js" />
			<script type="text/javascript" src="/werp_web_theme/static/src/js/views/form_renderer.js" />
		</xpath>
	</template>
	
</odoo>
